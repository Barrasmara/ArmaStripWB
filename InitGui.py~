# InitGui.py
import FreeCADGui as Gui

class ArmstripWorkbench(Gui.Workbench):
    MenuText = "Armstrip"
    ToolTip  = "Tools for creating Armstrip and generating fastener pockets"
    Icon     = ":/ArmstripWB/icons/ArmstripWB.svg"

    def Initialize(self):
        # Import and register commands
        from ArmstripWB import commands
        commands.register_commands()

        self.appendToolbar("Armstrip", [
            "Armstrip_CreateStrip",
            "Armstrip_NutPockets",
        ])
        self.appendMenu("Armstrip", [
            "Armstrip_CreateStrip",
            "Armstrip_NutPockets",
        ])

    def Activated(self):
        pass

    def Deactivated(self):
        pass

Gui.addWorkbench(ArmstripWorkbench())
